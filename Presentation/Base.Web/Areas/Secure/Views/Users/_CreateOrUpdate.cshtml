@model UserModel
<input asp-for="Id" type="hidden" />

<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <div class="cards-group">
                <div class="card card-default">
                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-md-3 text-right">
                                <label asp-for=@Model.Name>Name</label>
                            </div>
                            <div class="col-md-9">
                                <input asp-for=@Model.Name class="form-control" />
                                <span asp-validation-for=@Model.Name></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-right">
                                <label asp-for=@Model.Username>Username</label>
                            </div>
                            <div class="col-md-9">
                                <input asp-for=@Model.Username class="form-control" />
                                <span asp-validation-for=@Model.Username></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-right">
                                <label asp-for="@Model.Gender">Gender</label>
                            </div>
                            <div class="col-md-9">
                                <div class="form-check">
                                    <input type="radio" asp-for="@Model.Gender" class="form-check-input" value="Male" />
                                    <label class="form-check-label">Male</label>
                                </div>
                                <div class="form-check">
                                    <input type="radio" asp-for="@Model.Gender" class="form-check-input" value="Female" />
                                    <label class="form-check-label">Female</label>
                                </div>
                                <span asp-validation-for="@Model.Gender"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-right">
                                <label asp-for=@Model.Phone>Phone</label>
                            </div>
                            <div class="col-md-9">
                                <input asp-for=@Model.Phone class="form-control" />
                                <span asp-validation-for=@Model.Phone></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-right">
                                <label asp-for=@Model.Email>Email</label>
                            </div>
                            <div class="col-md-9">
                                <input asp-for=@Model.Email class="form-control" />
                                <span asp-validation-for=@Model.Email></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-right">
                                <label asp-for=@Model.Company>Company</label>
                            </div>
                            <div class="col-md-9">
                                <input asp-for=@Model.Company class="form-control" />
                                <span asp-validation-for=@Model.Company></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-right">
                                <label asp-for=@Model.HomeAddress>HomeAddress</label>
                            </div>
                            <div class="col-md-9">
                                <input asp-for=@Model.HomeAddress class="form-control" />
                                <span asp-validation-for=@Model.HomeAddress></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
