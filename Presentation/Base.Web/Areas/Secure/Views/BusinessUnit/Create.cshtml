@model BusinessUnitModel

@{
    //page title
    ViewBag.PageTitle = "BusinessUnit";
    CrmHtml.SetActiveMenuItemSystemName("BusinessUnitList");
}

<form asp-controller="BusinessUnit" asp-action="Create" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            BusinessUnit
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">Back to List</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                Save
            </button>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="form-horizontal">
                <div class="cards-group">
                    <div class="card card-default card-search">
                        <div class="card-body">
                            <div class="row form-group">
                                <div class="col-md-3" style="text-align:right;margin-top:5px;">
                                    <strong>BusinessUnit Name</strong>
                                </div>
                                <div class="col-md-9">
                                    <input asp-for="@Model.BusinessUnitName" class="form-control" />
                                    <span asp-validation-for=@Model.BusinessUnitName></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>

