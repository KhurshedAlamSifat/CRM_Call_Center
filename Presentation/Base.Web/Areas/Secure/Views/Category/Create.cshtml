@using Base.Web.Areas.Secure.Models.Category;
@model Base.Web.Areas.Secure.Models.Category.CategoryModel
@{
    ViewData["Title"] = "Category";
    CrmHtml.SetActiveMenuItemSystemName("Category");
}
<form asp-controller="Category" asp-action="Create" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            Crear
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">Back to list</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                Save
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                Save and Continue
            </button>
        </div>
    </div>
    <input type="hidden" name="Id" value="@Model.Id" />
    <div asp-validation-summary="ModelOnly" class="message-error"></div>
    <section class="content">
        <div class="container-fluid">
            <div class="form-horizontal">
                <div class="cards-group" id="user-cards">
                    <div class="card card-default">
                        <div class="card-body">
                            <div class="form-group row">
                                <div class="col-md-3" style="text-align:right; margin-top:7px;">
                                    <label asp-for="Brand_Id">Brand</label>
                                </div>
                                <div class="col-md-9">
                                    <select asp-for="Brand_Id" asp-items="@Model.Brands" class="form-control"></select>
                                    <span asp-validation-for="Brand_Id"></span>
                                </div>
                            </div>


                            <div class="form-group row">
                                <div class="col-md-3" style="text-align:right; margin-top:7px;">
                                    <label asp-for="CategoryName">Category Name</label>
                                </div>
                                <div class="col-md-9">
                                    <input asp-for="CategoryName" class="form-control" />
                                    <span asp-validation-for="CategoryName"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>
<script>
    $(document).ready(function () {
        $('#BrandId').select2();
    });
</script>