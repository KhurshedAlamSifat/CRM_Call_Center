@using Base.Web.Areas.Secure.Models.Problems;
@model Base.Web.Areas.Secure.Models.Problems.ProblemTypeModel
@{
    ViewData["Title"] = "Problem";
    CrmHtml.SetActiveMenuItemSystemName("Problem");
}
<form asp-controller="Problem" asp-action="Create" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            Create
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="ProblemList">Back to list</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                Save
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                Save & Continue
            </button>
        </div>
    </div>
    <input type="hidden" name="Id" value="@Model.Id" />
    <div asp-validation-summary="ModelOnly" class="message-error"></div>
    <section class="content">
        <div class="container-fluid">
            <div class="form-horizontal">
                <div class="cards-group" id="user-cards">
                    <div class="card card-default">
                        <div class="card-body">
                            <div class="form-group row">
                                <div class="col-md-3" style="text-align:right; margin-top:7px;">
                                    <label asp-for="CategoryId">Category Name</label>
                                </div>
                                <div class="col-md-9">
                                    <select asp-for="CategoryId" asp-items="@Model.Categories" class="form-control"></select>
                                    <span asp-validation-for="CategoryId"></span>
                                </div>
                            </div>


                            <div class="form-group row">
                                <div class="col-md-3" style="text-align:right; margin-top:7px;">
                                    <label asp-for="ProblemDescription">Problem Description</label>
                                </div>
                                <div class="col-md-9">
                                    <input asp-for="ProblemDescription" class="form-control" />
                                    <span asp-validation-for="ProblemDescription"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>
<script>
    $(document).ready(function () {
        $('#CategoryId').select2();
    });
</script>

