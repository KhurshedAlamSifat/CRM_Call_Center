@model TechnicianModel

<input type="hidden" name="Id" value="@Model.Id" />
<div asp-validation-summary="ModelOnly" class="message-error"></div>
<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <div class="cards-group" id="user-cards">
                <div class="card card-default">
                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-md-3" style="text-align:right; margin-top:7px;">
                                <label asp-for="Thana_Id">Thana</label>
                            </div>
                            <div class="col-md-9">
                                <select asp-for="Thana_Id" asp-items="@Model.thana" class="form-control"></select>
                                <span asp-validation-for="Thana_Id"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-3" style="text-align:right; margin-top:7px;">
                                <label asp-for="ServiceCenter_Id">ServiceCenter</label>
                            </div>
                            <div class="col-md-9">
                                <select asp-for="ServiceCenter_Id" asp-items="@Model.serviceCenter" class="form-control"></select>
                                <span asp-validation-for="ServiceCenter_Id"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-3" style="text-align:right; margin-top:7px;">
                                <label asp-for="Category_Id">Product Category</label>
                            </div>
                            <div class="col-md-9">
                                <select asp-for="Category_Id" asp-items="@Model.productCategory" class="form-control"></select>
                                <span asp-validation-for="Category_Id"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-3" style="text-align:right; margin-top:7px;">
                                <label asp-for="TechnicianName">Technician Name</label>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="TechnicianName" class="form-control" />
                                <span asp-validation-for="TechnicianName"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-3" style="text-align:right; margin-top:7px;">
                                <label asp-for="TechnicianPhoneNo">Technician PhoneNo</label>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="TechnicianPhoneNo" class="form-control" />
                                <span asp-validation-for="TechnicianPhoneNo"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
