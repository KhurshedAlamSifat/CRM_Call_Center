@inject IWorkContext workContext
@{
    var customer = await workContext.GetCurrentUserAsync();
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="text-center">Call Center Agent</h4>
                </div>
                <div class="card-body">
                    <h3>Welcome @customer.Name</h3>
                </div>
            </div>
        </div>
    </div>
</div>
